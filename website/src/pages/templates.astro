---
import Layout from '../layouts/Layout.astro';

const templates = [
  {
    name: "Claude Code",
    icon: "‚ö°",
    file: "CLAUDE.md",
    path: "templates/claude-code/CLAUDE.md",
    description: "Configuration for Claude Code CLI with full agent system."
  },
  {
    name: "Cursor",
    icon: "üéØ",
    file: "_global.mdc",
    path: "templates/cursor/rules/_global.mdc",
    description: "Cursor rules file for AI-assisted development."
  },
  {
    name: "Copilot",
    icon: "ü§ñ",
    file: "copilot-instructions.md",
    path: "templates/copilot/copilot-instructions.md",
    description: "GitHub Copilot custom instructions file."
  },
  {
    name: "Universal",
    icon: "üåê",
    file: "AGENTS.md",
    path: "templates/universal/AGENTS.md",
    description: "Universal agent definitions for any AI assistant."
  },
  {
    name: "Custom Modes",
    icon: "üé®",
    file: "custom_modes.yaml",
    path: "templates/custom_modes.yaml",
    description: "Roo Code custom modes configuration."
  },
  {
    name: "Slash Commands",
    icon: "‚å®Ô∏è",
    file: "slash-commands.yaml",
    path: "templates/slash-commands.yaml",
    description: "Command registry for quick actions."
  }
];

const slashCommands = [
  { cmd: "/plan", desc: "Generate a Task Map for the current objective" },
  { cmd: "/scope", desc: "Deep-scope an issue before implementation" },
  { cmd: "/research", desc: "Conduct deep research on a topic" },
  { cmd: "/design", desc: "Create architecture and design documents" },
  { cmd: "/test", desc: "Write tests for specified functionality" },
  { cmd: "/build", desc: "Implement features following TDD" },
  { cmd: "/refactor", desc: "Improve code quality and structure" },
  { cmd: "/debug", desc: "Diagnose and fix issues" },
  { cmd: "/review", desc: "Review code for quality and correctness" },
  { cmd: "/docs", desc: "Generate documentation" },
  { cmd: "/status", desc: "Get current task and project status" },
  { cmd: "/validate", desc: "Validate implementations against specs" }
];
---

<Layout title="Templates">
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <h1 class="font-display text-4xl lg:text-5xl font-bold text-stone-900 mb-6">
          Templates & Configuration
        </h1>
        <p class="text-xl text-stone-600 max-w-3xl mx-auto">
          Pre-configured templates for popular AI-assisted development environments. 
          Copy, customize, and integrate the multi-agent framework into your workflow.
        </p>
      </div>

      <!-- IDE Templates -->
      <h2 class="font-display text-2xl font-bold text-stone-900 mb-8">IDE Configurations</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {templates.map(template => (
          <div class="bg-white rounded-xl border border-stone-200 p-6 hover:border-copper hover:shadow-md transition-all">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-stone-100 rounded-xl flex items-center justify-center text-2xl">
                {template.icon}
              </div>
              <div>
                <h3 class="font-display text-lg font-semibold text-stone-900">{template.name}</h3>
                <code class="text-xs text-stone-500">{template.file}</code>
              </div>
            </div>
            <p class="text-stone-600 text-sm mb-4">{template.description}</p>
            <a 
              href={`https://github.com/Mnehmos/mnehmos.multi-agent.framework/blob/main/${template.path}`}
              class="inline-flex items-center gap-2 text-copper hover:text-copper-light text-sm font-medium transition-colors"
            >
              View template
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>

      <!-- Slash Commands -->
      <h2 class="font-display text-2xl font-bold text-stone-900 mb-8">Slash Commands</h2>
      <div class="bg-white rounded-xl border border-stone-200 overflow-hidden mb-16">
        <div class="p-6 border-b border-stone-100">
          <p class="text-stone-600">
            Quick commands for common development tasks. Use these to trigger specific agent behaviors.
          </p>
        </div>
        <div class="divide-y divide-stone-100">
          {slashCommands.map(cmd => (
            <div class="px-6 py-4 flex items-center gap-6 hover:bg-stone-50 transition-colors">
              <code class="font-mono text-copper font-semibold w-28 shrink-0">{cmd.cmd}</code>
              <span class="text-stone-600">{cmd.desc}</span>
            </div>
          ))}
        </div>
        <div class="p-6 bg-stone-50 border-t border-stone-100">
          <a 
            href="https://github.com/Mnehmos/mnehmos.multi-agent.framework/tree/main/slash-commands"
            class="inline-flex items-center gap-2 text-copper hover:text-copper-light font-medium transition-colors"
          >
            View all slash commands
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Start -->
      <h2 class="font-display text-2xl font-bold text-stone-900 mb-8">Quick Setup</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-stone-50 rounded-xl p-8">
          <h3 class="font-display text-xl font-semibold text-stone-900 mb-4">For Roo Code</h3>
          <ol class="space-y-4 text-stone-600">
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">1</span>
              <span>Copy <code class="text-copper">custom_modes.yaml</code> to your <code class="text-copper">.roo/</code> directory</span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">2</span>
              <span>Copy <code class="text-copper">custom-instructions-for-all-modes.md</code> to settings</span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">3</span>
              <span>Add MCP servers to your configuration</span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">4</span>
              <span>Start with <code class="text-copper">/plan</code> to create a Task Map</span>
            </li>
          </ol>
        </div>
        
        <div class="bg-stone-50 rounded-xl p-8">
          <h3 class="font-display text-xl font-semibold text-stone-900 mb-4">For Claude Code</h3>
          <ol class="space-y-4 text-stone-600">
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">1</span>
              <span>Copy <code class="text-copper">CLAUDE.md</code> to your project root</span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">2</span>
              <span>Add MCP servers to <code class="text-copper">claude_desktop_config.json</code></span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">3</span>
              <span>Open project in Claude Code CLI</span>
            </li>
            <li class="flex gap-3">
              <span class="w-6 h-6 bg-copper text-white rounded-full flex items-center justify-center text-sm font-semibold shrink-0">4</span>
              <span>Use slash commands to orchestrate tasks</span>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-stone-900 text-stone-50">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="font-display text-3xl font-bold mb-6">
        Need Help Getting Started?
      </h2>
      <p class="text-stone-400 mb-8">
        Check out the detailed documentation or view the complete setup guide.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/mnehmos.multi-agent.framework/get-started" class="inline-flex items-center justify-center gap-2 bg-copper text-stone-50 px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity">
          Get Started Guide
        </a>
        <a href="/mnehmos.multi-agent.framework/docs" class="inline-flex items-center justify-center gap-2 border-2 border-stone-600 text-stone-300 px-6 py-3 rounded-lg font-semibold hover:border-stone-500 transition-colors">
          Documentation
        </a>
      </div>
    </div>
  </section>
</Layout>
