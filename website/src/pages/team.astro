      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {agents.map(agent => (
          <div class={`card bg-gradient-to-br ${getColorClasses(agent.color)} hover:scale-[1.02]`}>
            <div class="flex items-start gap-4 mb-4">
              <div class="agent-icon text-2xl flex-shrink-0">
                <span>{agent.emoji}</span>
              </div>
              <div>
                <h3 class="font-bold text-lg">{agent.name}</h3>
                <p class="text-slate-400 text-sm">{agent.tagline}</p>
              </div>
            </div>
            
            <p class="text-slate-300 mb-4">{agent.description}</p>
            
            <div class="flex flex-wrap gap-2">
              {agent.capabilities.map(cap => (
                <span class="text-xs bg-slate-900/50 text-slate-400 px-2 py-1 rounded">
                  {cap}
                </span>
