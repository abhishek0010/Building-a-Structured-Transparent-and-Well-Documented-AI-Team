const getColorClasses = (color: string) => {
  const colors: Record<string, { bg: string, border: string, icon: string }> = {
    blue: { bg: "from-blue-500/10 to-blue-600/5", border: "border-blue-500/30 hover:border-blue-500/50", icon: "from-blue-500 to-blue-600" },
    purple: { bg: "from-purple-500/10 to-purple-600/5", border: "border-purple-500/30 hover:border-purple-500/50", icon: "from-purple-500 to-purple-600" },
    cyan: { bg: "from-cyan-500/10 to-cyan-600/5", border: "border-cyan-500/30 hover:border-cyan-500/50", icon: "from-cyan-500 to-cyan-600" },
    orange: { bg: "from-orange-500/10 to-orange-600/5", border: "border-orange-500/30 hover:border-orange-500/50", icon: "from-orange-500 to-orange-600" },
    green: { bg: "from-green-500/10 to-green-600/5", border: "border-green-500/30 hover:border-green-500/50", icon: "from-green-500 to-green-600" },
    red: { bg: "from-red-500/10 to-red-600/5", border: "border-red-500/30 hover:border-red-500/50", icon: "from-red-500 to-red-600" },
  };
  return colors[color] || colors.blue;
};
---

<Layout title="MCP Tools" description="Extend your AI agents with powerful Model Context Protocol tools from the Mnehmos ecosystem">
  <!-- Hero -->
  <section class="py-24 relative">
    <div class="glow-orb w-96 h-96 bg-cyan-500 -top-20 -right-48"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-flex items-center gap-2 bg-slate-800/50 border border-slate-700 rounded-full px-4 py-2 mb-6">
          <span class="text-sm text-slate-300">Model Context Protocol</span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl font-bold mb-6">
          <span class="gradient-text">Mnehmos</span> MCP Ecosystem
        </h1>
        <p class="text-xl text-slate-400">
          Powerful tools that extend your AI agents with computer control, persistent memory, RAG pipelines, research access, and more.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Tools Grid -->
  <section class="pb-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-8">
        {tools.map(tool => {
          const colors = getColorClasses(tool.color);
          return (
            <div class={`rounded-2xl bg-gradient-to-br ${colors.bg} border ${colors.border} p-6 sm:p-8 transition-all duration-300`}>
              <div class="flex flex-col lg:flex-row lg:items-start gap-6">
                <div class="flex-shrink-0">
                  <div class={`w-16 h-16 rounded-xl bg-gradient-to-br ${colors.icon} flex items-center justify-center text-3xl`}>
                    {tool.icon}
                  </div>
                </div>
                
                <div class="flex-grow">
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 mb-3">
