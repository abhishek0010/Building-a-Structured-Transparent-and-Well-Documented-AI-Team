---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A structured, production-ready multi-agent framework for coordinating specialized AI modes using clear contracts, deterministic execution, and traceable task flows." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/mnehmos.multi-agent.framework/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Multi-Agent Framework</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-stone-50 text-stone-800 antialiased">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-stone-50/90 backdrop-blur-sm border-b border-stone-200">
      <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/mnehmos.multi-agent.framework/" class="font-display font-bold text-xl text-stone-900 hover:text-copper transition-colors">
          mnehmos<span class="text-copper">.multi-agent</span>
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="/mnehmos.multi-agent.framework/team" class="text-stone-600 hover:text-stone-900 transition-colors">Team</a>
          <a href="/mnehmos.multi-agent.framework/tools" class="text-copper hover:text-copper-light transition-colors font-medium">Tools</a>
          <a href="/mnehmos.multi-agent.framework/templates" class="text-stone-600 hover:text-stone-900 transition-colors">Templates</a>
          <a href="/mnehmos.multi-agent.framework/docs" class="text-stone-600 hover:text-stone-900 transition-colors">Docs</a>
        </div>
        <a href="/mnehmos.multi-agent.framework/get-started" class="hidden md:inline-flex items-center gap-2 bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium hover:bg-stone-800 transition-colors">
          Get Started
        </a>
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-stone-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-stone-200 bg-stone-50">
        <div class="px-6 py-4 space-y-4">
          <a href="/mnehmos.multi-agent.framework/team" class="block text-stone-600 hover:text-stone-900">Team</a>
          <a href="/mnehmos.multi-agent.framework/tools" class="block text-copper hover:text-copper-light font-medium">Tools</a>
          <a href="/mnehmos.multi-agent.framework/templates" class="block text-stone-600 hover:text-stone-900">Templates</a>
          <a href="/mnehmos.multi-agent.framework/docs" class="block text-stone-600 hover:text-stone-900">Docs</a>
          <a href="/mnehmos.multi-agent.framework/get-started" class="block bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium text-center">Get Started</a>
        </div>
      </div>
    </nav>
    
    <main class="pt-20">
      <slot />
    </main>
    
    <footer class="bg-stone-900 text-stone-300 py-16 mt-24">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12">
          <div class="md:col-span-2">
            <span class="font-display font-bold text-2xl text-stone-50">mnehmos<span class="text-copper">.multi-agent</span></span>
            <p class="mt-4 text-stone-400 max-w-md">
              A structured, production-ready multi-agent framework for coordinating specialized AI modes. Part of the Mnehmos ecosystem of AI development tools.
            </p>
            <a href="https://mnehmos.github.io/vario.automation.website/" class="inline-block mt-4 text-copper hover:text-copper-light transition-colors">
              Built by Vario Automation →
            </a>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Framework</h4>
            <ul class="space-y-2 text-stone-400">
              <li><a href="/mnehmos.multi-agent.framework/team" class="hover:text-stone-200 transition-colors">Meet the Team</a></li>
              <li><a href="/mnehmos.multi-agent.framework/templates" class="hover:text-stone-200 transition-colors">Templates</a></li>
              <li><a href="/mnehmos.multi-agent.framework/docs" class="hover:text-stone-200 transition-colors">Documentation</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Connect</h4>
            <ul class="space-y-2 text-stone-400">
              <li><a href="https://github.com/Mnehmos/mnehmos.multi-agent.framework" class="hover:text-stone-200 transition-colors">GitHub</a></li>
              <li><a href="/mnehmos.multi-agent.framework/tools" class="hover:text-stone-200 transition-colors">MCP Tools</a></li>
              <li><a href="https://mnehmos.github.io/mnehmos.prompts.research/" class="hover:text-stone-200 transition-colors">Prompts Research</a></li>
              <li><a href="https://buymeacoffee.com/Mnehmos" class="hover:text-stone-200 transition-colors">☕ Buy Me a Coffee</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-12 pt-8 border-t border-stone-800 text-stone-500 text-sm">
          <p>© 2024 Mnehmos Multi-Agent Framework. MIT License.</p>
        </div>
      </div>
    </footer>
    
    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  :root {
    --copper: #B87333;
    --copper-light: #D4956A;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
  
  .font-display {
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .text-copper {
    color: var(--copper);
  }
  
  .bg-copper {
    background-color: var(--copper);
  }
  
  .border-copper {
    border-color: var(--copper);
  }
  
  .hover\:text-copper:hover {
    color: var(--copper);
  }
  
  .hover\:text-copper-light:hover {
    color: var(--copper-light);
  }
  
  .hover\:bg-copper:hover {
    background-color: var(--copper);
  }
  
  .hover\:border-copper:hover {
    border-color: var(--copper);
  }
  
  .focus\:ring-copper:focus {
    --tw-ring-color: var(--copper);
  }
</style>
